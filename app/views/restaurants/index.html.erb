<h1>Restaurants:</h1>
<%= link_to "Add restaurant", new_restaurant_path, class: "btn btn-primary" %>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <h2>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
    </h2>
  </li>
  <li>
    <p>
      <%= restaurant.category %>
    </p>
  </li>
  <% end %>
</ul>
